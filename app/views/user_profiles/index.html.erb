<p id="notice"><%= notice %></p>

<h1>User Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User type</th>
      <th>About me</th>
      <th>Gender</th>
      <th>Unit of measure</th>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th>Country code</th>
      <th>Phone</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.user_type %></td>
        <td><%= user_profile.about_me %></td>
        <td><%= user_profile.gender %></td>
        <td><%= user_profile.unit_of_measure %></td>
        <td><%= user_profile.address %></td>
        <td><%= user_profile.city %></td>
        <td><%= user_profile.country %></td>
        <td><%= user_profile.country_code %></td>
        <td><%= user_profile.phone %></td>
        <td><%= user_profile.user %></td>
        <td><%= link_to 'Show', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Profile', new_user_profile_path %>
