<p id="notice"><%= notice %></p>

<h1>Clothing Lines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tag line</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothing_lines.each do |clothing_line| %>
      <tr>
        <td><%= clothing_line.name %></td>
        <td><%= clothing_line.tag_line %></td>
        <td><%= clothing_line.description %></td>
        <td><%= clothing_line.user %></td>
        <td><%= link_to 'Show', clothing_line %></td>
        <td><%= link_to 'Edit', edit_clothing_line_path(clothing_line) %></td>
        <td><%= link_to 'Destroy', clothing_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

