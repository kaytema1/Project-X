<%- model_class = ClothingLine -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @clothing_line.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag_line) %>:</strong></dt>
  <dd><%= @clothing_line.tag_line %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @clothing_line.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @clothing_line.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              clothing_lines_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_clothing_line_path(@clothing_line), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              clothing_line_path(@clothing_line),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
