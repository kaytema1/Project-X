<%= form_for @clothing_line, :html => { :class => "form-horizontal clothing_line" } do |f| %>

  <% if @clothing_line.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@clothing_line.errors.count, "error") %> prohibited this clothing_line from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @clothing_line.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :tag_line, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tag_line, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tag_line) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clothing_lines_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
