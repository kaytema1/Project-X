<p id="notice"><%= notice %></p>

<h1>Male Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Back width</th>
      <th>Arm circumference</th>
      <th>Arm length</th>
      <th>Chest width</th>
      <th>Hip</th>
      <th>Hip length</th>
      <th>Waist</th>
      <th>Tie</th>
      <th>Knee</th>
      <th>Around ankle bar</th>
      <th>Length</th>
      <th>Note</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @male_measurements.each do |male_measurement| %>
      <tr>
        <td><%= male_measurement.back_width %></td>
        <td><%= male_measurement.arm_circumference %></td>
        <td><%= male_measurement.arm_length %></td>
        <td><%= male_measurement.chest_width %></td>
        <td><%= male_measurement.hip %></td>
        <td><%= male_measurement.hip_length %></td>
        <td><%= male_measurement.waist %></td>
        <td><%= male_measurement.tie %></td>
        <td><%= male_measurement.knee %></td>
        <td><%= male_measurement.around_ankle_bar %></td>
        <td><%= male_measurement.length %></td>
        <td><%= male_measurement.note %></td>
        <td><%= male_measurement.user %></td>
        <td><%= link_to 'Show', male_measurement %></td>
        <td><%= link_to 'Edit', edit_male_measurement_path(male_measurement) %></td>
        <td><%= link_to 'Destroy', male_measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

