<%- model_class = MaleMeasurement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:back_width) %></th>
      <th><%= model_class.human_attribute_name(:arm_circumference) %></th>
      <th><%= model_class.human_attribute_name(:arm_length) %></th>
      <th><%= model_class.human_attribute_name(:chest_width) %></th>
      <th><%= model_class.human_attribute_name(:hip) %></th>
      <th><%= model_class.human_attribute_name(:hip_length) %></th>
      <th><%= model_class.human_attribute_name(:waist) %></th>
      <th><%= model_class.human_attribute_name(:tie) %></th>
      <th><%= model_class.human_attribute_name(:knee) %></th>
      <th><%= model_class.human_attribute_name(:around_ankle_bar) %></th>
      <th><%= model_class.human_attribute_name(:length) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @male_measurements.each do |male_measurement| %>
      <tr>
        <td><%= link_to male_measurement.id, male_measurement_path(male_measurement) %></td>
        <td><%= male_measurement.back_width %></td>
        <td><%= male_measurement.arm_circumference %></td>
        <td><%= male_measurement.arm_length %></td>
        <td><%= male_measurement.chest_width %></td>
        <td><%= male_measurement.hip %></td>
        <td><%= male_measurement.hip_length %></td>
        <td><%= male_measurement.waist %></td>
        <td><%= male_measurement.tie %></td>
        <td><%= male_measurement.knee %></td>
        <td><%= male_measurement.around_ankle_bar %></td>
        <td><%= male_measurement.length %></td>
        <td><%= male_measurement.note %></td>
        <td><%= male_measurement.user_id %></td>
        <td><%=l male_measurement.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      male_measurement_path(male_measurement), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_male_measurement_path(male_measurement), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      male_measurement_path(male_measurement),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_male_measurement_path,
            :class => 'btn btn-primary' %>
