<%- model_class = MaleMeasurement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:back_width) %>:</strong></dt>
  <dd><%= @male_measurement.back_width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arm_circumference) %>:</strong></dt>
  <dd><%= @male_measurement.arm_circumference %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arm_length) %>:</strong></dt>
  <dd><%= @male_measurement.arm_length %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chest_width) %>:</strong></dt>
  <dd><%= @male_measurement.chest_width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hip) %>:</strong></dt>
  <dd><%= @male_measurement.hip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hip_length) %>:</strong></dt>
  <dd><%= @male_measurement.hip_length %></dd>
  <dt><strong><%= model_class.human_attribute_name(:waist) %>:</strong></dt>
  <dd><%= @male_measurement.waist %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tie) %>:</strong></dt>
  <dd><%= @male_measurement.tie %></dd>
  <dt><strong><%= model_class.human_attribute_name(:knee) %>:</strong></dt>
  <dd><%= @male_measurement.knee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:around_ankle_bar) %>:</strong></dt>
  <dd><%= @male_measurement.around_ankle_bar %></dd>
  <dt><strong><%= model_class.human_attribute_name(:length) %>:</strong></dt>
  <dd><%= @male_measurement.length %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @male_measurement.note %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @male_measurement.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              male_measurements_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_male_measurement_path(@male_measurement), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              male_measurement_path(@male_measurement),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
